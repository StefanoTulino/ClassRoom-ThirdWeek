<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.corso.hibernate2">
    <class name="Event" table="Evento">
        <id name="id" type="java.lang.Long" column="id_evento">
            <generator class="increment"/>
        </id>
        <property name="date" type="timestamp" column="data_evento"/>
        <property name="title" />
        <property name="description" />
    </class>

</hibernate-mapping>